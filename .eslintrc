{
  "root": true,
  "extends": "eslint:recommended",
  "rules": {
    "strict": 0,
    "quotes": [0, "single"],
    "curly": [1, "multi-line"],
    "no-console": 0,
    "no-use-before-define": [1, "nofunc"],
    "no-underscore-dangle": 0,
    "no-unused-vars": [1, {"vars": "local", "args": "none"}],
    "new-cap": 0,
    "consistent-return": 0,
    "camelcase": 0,
    "dot-notation": 0,
    "semi": [1, "always"]
  },
  env: {
    "node": true,
    "mocha": true
  }
}
